<Window x:Class="test.View.EmployerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test.View"
        mc:Ignorable="d"
        Title="Employer Window" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5,0" Text="City:" VerticalAlignment="Top"/>
            <TextBox Text="{Binding Employer.City, Mode=TwoWay}" VerticalAlignment="Top" Width="120" Height="20"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button Margin="10,0" Content="Verify" Command="{Binding VerifyCommand}" HorizontalContentAlignment="Center" />
            <Button Content="Create Employee" Command="{Binding CreateEmployeeCommand}" HorizontalContentAlignment="Center"/>
        </StackPanel>

    </Grid>
</Window>
