<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Background="Bisque">
        <StackPanel DockPanel.Dock="Top"  Orientation="Horizontal">
            <TextBlock Margin="20" Padding="0,10" Text="Document Name" Height="40"/>
            <TextBox Text="{Binding DocumentName}" VerticalContentAlignment="Center" Width="220" Height="40"/>
        </StackPanel>

        <Button Margin="30" DockPanel.Dock="Bottom" Content="Create Document" Command="{Binding CreateDocumentCommand}" />
        <Label DockPanel.Dock="Top"/>
    </DockPanel>
</Window>
